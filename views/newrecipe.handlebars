<div class="container">
    <form class="col s12">
      <div class="row">
        <div class="input-field col s12">
          <input placeholder="Recipe Name" id="recipe_name" type="text" class="validate">
          <label for="recipe_name">Recipe Name</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <textarea id="instructions" class="materialize-textarea"></textarea>
          <label for="instructions">Instructions</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <input type="text" id="ingredientName" class="autocomplete">
          <label for="ingredientName">Ingredients</label>
        </div>
        <div class="input-field col s2">
          <input type="text" id="ingredientQuantity" class="autocomplete">
          <label for="ingredientQuantity">Quantity</label>
        </div>
        <div class="input-field col s3">
          <input type="text" id="ingredientMeasurement" class="autocomplete">
          <label for="ingredientMeasurement">Measurement</label>
        </div>
        <div class="input-field col s1">
          <a class="btn-floating btn-large waves-effect waves-light ingredientAdd"><i class="material-icons">+</i></a>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <textarea disabled id="selectedIngredients" class="materialize-textarea"> </textarea>
          <label for="selectedIngredients">Selected Ingredients</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="recipeImage" type="url" class="validate">
          <label for="recipeImage">Image Link</label>
        </div>
      </div>
      <div class="row">
        <div class="col s12">
          <select>
            <option value="" disabled selected>Select a category</option>
            <option value="1">Dinner</option>
            <option value="2">Dessert</option>
            <option value="3">Dip</option>
          </select>
          <label>Category</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="recipeAuthor" type="text" class="validate">
          <label for="recipeAuthor">Author</label>
        </div>
      </div>
    </form>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/addRecipe.js"></script>